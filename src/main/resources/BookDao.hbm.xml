<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name = "ua.goit.dev6.library.model.dao.BookDao" table = "book">
        <id name = "id" type = "java.lang.Integer" column = "id">
            <generator class="increment">
                <param name="sequence">book_id_seq</param>
            </generator>
        </id>
        <property name = "name" column = "name" type = "string" length="1000"/>
        <property name="countPages" column="count_pages" type="java.lang.Integer"/>
        <set name="authors" table="author_book_relation" cascade="save-update">
            <key column="book_id"/>
            <many-to-many column="author_id" entity-name="ua.goit.dev6.library.model.dao.AuthorDao" />
        </set>
    </class>
</hibernate-mapping>
