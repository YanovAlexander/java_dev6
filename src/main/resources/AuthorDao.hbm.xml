<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name = "ua.goit.dev6.library.model.dao.AuthorDao" table = "author">
        <id name = "id" type = "java.lang.Integer" column = "id">
            <generator class="increment">
                <param name="sequence">author_id_seq</param>
            </generator>
        </id>
        <property name = "firstName" column = "first_name" type = "string" length="1000"/>
        <property name = "lastName" column = "last_name" type = "string" length="1000"/>
        <property name = "email" column = "email" type = "string" length="1000"/>
        <set name="books" table="author_book_relation" inverse="true">
            <key column="author_id"/>
            <many-to-many column="book_id" class="ua.goit.dev6.library.model.dao.BookDao" />
        </set>
    </class>
</hibernate-mapping>
